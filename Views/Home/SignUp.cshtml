@{
    ViewBag.Title = "SignUp";
}

@model LoginSignupMVC.Models.Register
@if (ViewBag.TheResult == false)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Oh snap!</strong> <a href="#" class="alert-link">
            @ViewBag.error
        </a>
    </div>
}
@using (Html.BeginForm($"SignUp", $"Home",FormMethod.Post))
{
    <fieldset>

        <div class="form-group">
            <label for="exampleInputEmail1">First Name</label>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Last Name</label>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
        </div>
        
        <div class="@((ViewBag.error != null) ? "form-group has-danger" : "form-group")">
            <label for="exampleInputEmail1">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" ,type="email"})

            
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Password</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "required", type = "password" })
        </div>

         
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
}